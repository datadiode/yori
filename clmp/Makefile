
BINARIES=clmp.exe

!INCLUDE "..\config\common.mk"

!IF $(PDB)==1
LINKPDB=/Pdb:clmp.pdb
!ENDIF

CFLAGS=$(CFLAGS) -DCLMP_VER_MAJOR=$(CLMP_VER_MAJOR) -DCLMP_VER_MINOR=$(CLMP_VER_MINOR)

OBJS=\
	 clmp.obj        \

compile: $(OBJS)

clmp.exe: $(OBJS) $(YORILIB) $(YORICRT)
	@echo $@
	@$(LINK) $(LDFLAGS) -entry:$(YENTRY) $(OBJS) $(LIBS) $(CRTLIB) $(YORILIB) -version:$(CLMP_VER_MAJOR).$(CLMP_VER_MINOR) $(LINKPDB) -out:$@

